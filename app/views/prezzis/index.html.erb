<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>	

<div class="page-header">
  <h1>Gestione prezzi enel</small></h1>
</div>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Lista prezzi enel al Euro/kWh</div>

  <!-- Table -->
  <table class="table">
  <thead>
    <tr>
      <th>Datainiziovalidita</th>
      <th>Datafinevalidita</th>
      <th>Prezzofascia1</th>
      <th>Prezzofascia2</th>
      <th>Prezzofascia3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prezzis.each do |prezzi| %>
      <tr>
        <td><%= prezzi.datainiziovalidita %></td>
        <td><%= prezzi.datafinevalidita %></td>
        <td><%= prezzi.prezzofascia1 %></td>
        <td><%= prezzi.prezzofascia2 %></td>
        <td><%= prezzi.prezzofascia3 %></td>
        <td><%= link_to 'Show', prezzi %></td>
        <td><%= link_to 'Edit', edit_prezzi_path(prezzi) %></td>
        <td><%= link_to 'Destroy', prezzi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<nav>
  <ul class="pager">
    <li><a href=<%=new_prezzi_path%> class="btn btn-xs btn-default"><span class="glyphicon glyphicon-plus"></span> Nuovo prezzo</a></li>
    <li><a href=<%=lettures_path%> class="btn btn-xs btn-default"><span class="glyphicon glyphicon-align-justify"></span> Lista letture</a></li>
  </ul>
</nav>
